<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OneBankAfrica"
        tools:targetApi="31">
        <activity
            android:name=".Activities.ExtraActivities.Send_Money_Activity"
            android:exported="false" />
        <activity
            android:name=".Activities.ExtraActivities.AddRecipientActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.VouchersActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AirtimeActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.AccountActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.StatementsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.TransactionsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.RecipientsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.NotificationsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.CardActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.CashOutActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.PaymentsActivity"
            android:exported="false" />
        <activity
            android:name=".auth.Signup"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.Register"
            android:exported="false" />
        <activity
            android:name=".auth.Login"
            android:exported="false" />
        <activity
            android:name=".Splash_Screen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>